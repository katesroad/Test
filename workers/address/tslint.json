{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "path/to/custom/rules/directory/",
    "another/path/"
  ],
  "rules": {
    "@typescript-eslint/explicit-module-boundary-types": "off"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": [
          "error"
        ]
      }
    }
  ]
}